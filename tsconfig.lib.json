{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "skipLibCheck": true,
    
    /* 类型声明输出 */
    "declaration": true,
    "declarationDir": "./dist/types",
    "emitDeclarationOnly": true,
    
    /* JSX */
    "jsx": "react-jsx",
    
    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": ["src/index.ts", "src/components/**/*"],
  "exclude": ["src/main.tsx", "src/App.tsx", "src/*Page.tsx", "src/assets", "node_modules", "dist"]
}
